<div id="mySidebar" class="sidebar">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">Ã—</a>
  <div id="menu">
    <ul>
      <li><%= link_to "Map", main_home_path, class: "link" %></li>
      <li><%= link_to "About", main_about_path, class: "link" %></li>
      <li><%= link_to "Emergency", main_emergency_path, class: "link" %></li>
