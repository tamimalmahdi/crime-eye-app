<h1>Login</h1>
<hr>
<h2>Sign into an existing account.</h2><br>

<%= form_with url: login_path, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control" %>
    <%= link_to "Forgot your password?", password_reset_path %>
  </div>

  <div class="mb-5">
    <%= form.submit "Login", class: "btn btn-primary" %>
    <%= link_to "Sign Up", sign_up_path, class:"btn btn-secondary" %>
  </div>
<% end %>

<hr class="hr-text" data-content="OR">
<br>
<div class="d-inline-flex justify-content mb-3">
  <h2>Sign in with Twitter.&nbsp</h2><%= image_tag("twitter_logo.png", size: "40x40") %>
</div>

<%= button_to "Connect using Twitter", "/auth/twitter", method: :post, class: "btn btn-primary" %>
